/* pages/index/index.wxss */
page{
  height:100%;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.list-i {
  padding: 18rpx 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 300px;
  background:rgba(255, 255, 255, 0.267);
  border-bottom: 5px solid rgba(245, 245, 245, 0.349);
}
.content {
  height: 160px;
  border-bottom: 1px solid grey;
}
.list-i .right {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.right image{
  display: block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.add {
  position: absolute;
  right: 32px;
  bottom: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  background:white;
  border: 1px solid #888;
  border-radius: 50%;
}
.add image {
  width: 32px;
  height: 32px;
}
.hover{
    opacity: 0.9;
    background:rgba(160, 160, 160, 0.582);
}
.cover {
  width: 100%;
  height: 400rpx;
  display: block;
}